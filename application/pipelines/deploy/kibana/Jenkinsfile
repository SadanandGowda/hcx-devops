// vim: ft=groovy et ts=2 sw=2:

node('ansible') {
    ansiColor('xterm') {
      stage("Warming up") {
        container('ansible') {
          // Checking out public repo
          checkout scm
          // Loading library
          commonCode = load "${env.WORKSPACE}/application/pipelines/commonGroovy/common.groovy"
        }
      }
      stage("Deploy") {
          container('ansible'){
            // Setting build job to false since kibana image is from external repo
            copyArtifactJob = "false"
            // Gathering all required variables
            commonCode.commonVariables()
            // Checking out private repo
            commonCode.checkoutPrivate()
            // Deploy helm
            commonCode.deployHelm(appName, copyArtifactJob)
          }
      }
    }
}
